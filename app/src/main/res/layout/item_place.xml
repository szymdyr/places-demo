<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8"
        app:cardElevation="@dimen/size4"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/size8"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size24">

        <TextView
                android:id="@+id/item_place_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size14"
                android:textColor="@android:color/black"
                android:text="@string/place_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/item_place_name"
                android:layout_width="@dimen/size0"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font18"
                android:textColor="@android:color/black"
                android:text="@string/place_name"
                android:layout_marginStart="@dimen/size4"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/item_place_name_label"
                app:layout_constraintStart_toEndOf="@+id/item_place_name_label"
                tools:text="Miejscowo"/>

        <TextView
                android:id="@+id/item_place_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size14"
                android:textColor="@android:color/black"
                android:text="@string/place_address"
                android:layout_marginTop="@dimen/size8"
                app:layout_constraintTop_toBottomOf="@+id/item_place_name_label"
                app:layout_constraintStart_toStartOf="@id/item_place_name_label"/>

        <TextView
                android:id="@+id/item_place_address"
                android:layout_width="@dimen/size0"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font18"
                android:textColor="@android:color/black"
                android:text="@string/place_name"
                android:layout_marginStart="@dimen/size4"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/item_place_address_label"
                app:layout_constraintStart_toEndOf="@+id/item_place_address_label"
                tools:text="ul. Ładna 10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>